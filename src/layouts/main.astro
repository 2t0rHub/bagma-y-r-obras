---
import "../styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SeoSchema from "@/components/SeoSchema.astro";
const { content } = Astro.props;
// Importa los grosores de fuente que necesitas. 400 es normal, 800 es extra-bold.
import "@fontsource/open-sans/400.css";
import "@fontsource/open-sans/800.css";

const default_title = "Bagma & R Soluciones y Obras";
const default_description =
  "Bagma & R Soluciones y Obras es una empresa especializada en reformas del hogar y climatización, pide tu presupuesto!";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- 
      Directrices de Google para Favicons:
      1. El tamaño debe ser múltiplo de 48px (ej. 48x48, 96x96).
      2. La URL debe ser estable y absoluta.
    -->
    <link
      rel="icon"
      type="image/png"
      sizes="48x48"
      href={new URL("/logo-icon.png", Astro.site).href}
    />
    <!-- Icono para dispositivos Apple (no necesita ser absoluto) -->
    <link rel="apple-touch-icon" href="/logo-icon.png" />
    <!-- Icono genérico (fallback) -->
    <link rel="shortcut icon" href="/logo-icon.png" />
    <title>{content?.title ? content.title : default_title}</title>
    <meta
      name="description"
      content={content?.description ? content.description : default_description}
    />
    <!-- Color de la barra del navegador en móviles -->
    <meta name="theme-color" content="#1a2b4a" />
    <SeoSchema faqs={content?.faqs} />
  </head>

  <body class="min-h-screen">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
