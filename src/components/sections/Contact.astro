---
import { Phone, Mail, MapPin } from "lucide-react";
import { COMPANY } from "@/config/config";
import ContactForm from "@/components/ContactForm.astro";
import FaqSchema from "@/components/FaqSchema.astro";

// Define tus preguntas y respuestas aquí
const faqs = [
  {
    question: "¿Qué tipo de servicios de climatización ofrecen?",
    answer:
      "Ofrecemos instalación, mantenimiento y reparación de sistemas de aire acondicionado, calderas de gas, aerotermia y suelo radiante para particulares y empresas.",
  },
  {
    question: "¿Realizan reformas integrales?",
    answer:
      "Sí, nos especializamos en reformas integrales de viviendas y locales comerciales, gestionando todo el proyecto desde el diseño inicial hasta la entrega final.",
  },
];
---

<section id="contact" class="py-24 sm:py-32 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-extrabold text-chambray-900">
        Contacta con Nosotros
      </h2>
      <p class="mt-4 text-lg text-chambray-600">
        ¿Tienes un proyecto en mente o una urgencia? Estamos aquí para ayudarte.
        Rellena el formulario o utiliza nuestros otros canales de contacto.
      </p>
    </div>

    <!-- Grid Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Left Column: Contact Info & Map -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-bold text-chambray-800">
            Información de Contacto
          </h3>
          <p class="mt-2 text-chambray-600">
            Atendemos en toda la Comunidad de Madrid.
          </p>
        </div>

        <div
          class="space-y-6 text-chambray-700"
          itemscope
          itemtype="http://schema.org/LocalBusiness"
        >
          <meta itemprop="name" content={COMPANY.name} />
          <meta itemprop="image" content="/logo.png" />
          <!-- Asegúrate de tener un logo.png en tu carpeta public -->
          <div class="flex items-start gap-4">
            <Phone className="w-6 h-6 text-chambray-600 mt-1 flex-shrink-0" />
            <div>
              <h4 class="font-semibold">Teléfono</h4>
              <a
                href={`tel:${COMPANY.phone}`}
                itemprop="telephone"
                class="hover:text-chambray-900 transition-colors"
                >{COMPANY.phone_display}</a
              >
            </div>
          </div>
          <div class="flex items-start gap-4">
            <Mail className="w-6 h-6 text-chambray-600 mt-1 flex-shrink-0" />
            <div>
              <h4 class="font-semibold">Email</h4>
              <a
                href={`mailto:${COMPANY.email}`}
                itemprop="email"
                class="hover:text-chambray-900 hover:underline transition-colors"
                >{COMPANY.email}</a
              >
            </div>
          </div>
          <div
            class="flex items-start gap-4"
            itemprop="address"
            itemscope
            itemtype="http://schema.org/PostalAddress"
          >
            <MapPin className="w-6 h-6 text-chambray-600 mt-1 flex-shrink-0" />
            <div>
              <h4 class="font-semibold">Ubicación</h4>
              <p>
                <span itemprop="streetAddress">{COMPANY.street}</span>,
                <span itemprop="postalCode">{COMPANY.postal_code}</span>,
                <span itemprop="addressLocality"
                  >{COMPANY.city}, {COMPANY.region}</span
                >,
                <span itemprop="addressCountry">{COMPANY.country}</span>
              </p>
            </div>
          </div>
        </div>

        <!-- Google Maps Iframe -->
        <div
          class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden border-2 border-chambray-200"
        >
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d380.24537048041793!2d-3.480945514935301!3d40.32097950000812!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd423ebf71863be3%3A0x1e5036b70fe18ce9!2sLa%20Azucarera%2C%20C.%20de%20las%20Hilanderas%2C%2031%2C%2028500%20Arganda%20del%20Rey%2C%20Madrid!5e0!3m2!1ses!2ses!4v1759858102878!5m2!1ses!2ses"
            width="100%"
            height="400"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Ubicación en Google Maps"></iframe>
        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <ContactForm />
    </div>
  </div>

  <!-- FAQ Section -->
  <div class="container mx-auto px-4 mt-24 sm:mt-32">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl md:text-4xl font-extrabold text-chambray-900">
        Preguntas Frecuentes
      </h2>
      <p class="mt-4 text-lg text-chambray-600">
        Resolvemos algunas de las dudas más comunes de nuestros clientes.
      </p>
    </div>
    <div class="max-w-3xl mx-auto space-y-6">
      {
        faqs.map((faq) => (
          <div class="border-b border-chambray-200 pb-4">
            <h3 class="text-xl font-semibold text-chambray-800">
              {faq.question}
            </h3>
            <p class="mt-2 text-chambray-600">{faq.answer}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<!-- Inyecta el esquema JSON-LD para el SEO de las FAQs -->
<FaqSchema faqs={faqs} />
