---
import "../styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
const { content } = Astro.props;

const default_title = "Bagma & R Obras";
const default_description =
  "Bagma & R Obras y soluciones es una empresa especializada en reformas del hogar y climatización, pide tu presupuesto!";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/logo-icon.png" />
    <title>{content?.title ? content.title : default_title}</title>
    <!-- Google Fonts Import: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <meta
      name="description"
      content={content?.description ? content.description : default_description}
    />
    <!-- Color de la barra del navegador en móviles -->
    <meta name="theme-color" content="#1a2b4a" />
  </head>
  <body class="min-h-screen font-sans">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
